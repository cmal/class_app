<div class="panel panel-default">
  <div class="panel-heading">
<b class="user-name"><%= @user.name %></b>
<span class="user-email"><%= @user.email %></span>
    <%= link_to edit_user_path, :class => 'pull-right' do %>
    <span class="glyphicon glyphicon-edit"><strong>编辑用户</strong></span>
    <% end %>
  </div>

  <table class="user-klasses table table-striped">
    <tr><th>#</th><th>所在班级</th>
      <% if current_user.admin? %>
      <th>操作</th>
      <% end %>
    </tr>
    <% if @user.klasses.any? %>
    <%= render @user.klasses %>
    <% end %>
  </table>
</div>
