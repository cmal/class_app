<h1 class="center">登陆</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, :url => login_path, html: { class: 'form-vertical' }) do |f| %>

    <%= f.input :email, label: "电子邮箱" %>
    <%= f.input :password, label: "密码" %>

    <%= f.submit "登入", :class => 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
